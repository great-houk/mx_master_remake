{
	"version": "2.0.0",
	"options": {
		"env": {
			"DEFMT_LOG": "info"
		}
	},
	"tasks": [
		{
			"type": "cargo",
			"label": "buildDebug",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		},
		{
			"type": "cargo",
			"label": "buildRelease",
			"command": "build",
			"args": [
				"--release"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
		}
	]
}